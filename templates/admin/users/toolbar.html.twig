                </div>
            </div>
            <div class="collapse navbar-collapse" id="toolbar-{{ request_id()|html_id }}">
                <div class="nav navbar-nav navbar-left pull-left">
                    <span class="hidden-sm hidden-md hidden-lg left-margin-sm"></span>
                    {% import 'toolbar/toolbarbutton.html.twig' as toolBar %}
                    {{ toolBar.render_toolbar_buttons(buttons) }}
                </div>
                <div class="nav navbar-nav navbar-right pull-right text-nowrap">
