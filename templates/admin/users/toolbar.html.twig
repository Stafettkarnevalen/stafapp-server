{% macro render_nav(buttons) %}
    <nav class="navbar navbar-default toolbar" data-spy="affix" data-offset-top="251">
        <div class="container-fluid">

            <div class="navbar-header">
                <button type="button" class="navbar-btn navbar-toggle collapsed" data-toggle="collapse" data-target="#toolbar-{{ request_id()|html_id }}" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand dropdown">
                    <a class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-pencil-square-o"></i> {% trans %}action.create{% endtrans %}
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item side-padding" data-reload="true" data-toggle="modal" href="{{ path(Routes.nav_admin_create_user, {'discriminator': 'SchoolManager'}) }}">{% trans %}label.school_manager{% endtrans %}</a>
                        <a class="dropdown-item side-padding" data-reload="true" data-toggle="modal" href="{{ path(Routes.nav_admin_create_user, {'discriminator': 'SystemAdministrator'}) }}">{% trans %}label.system_admin{% endtrans %}</a>
