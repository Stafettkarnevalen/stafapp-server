{% macro render_sorted_table(addresses, orders, order, sort) %}
    {{ table(addresses, {
        'trans_domain': 'school',
        'class': 'table table-bordered table-responsive table-condensed table-striped table-scrollable table-searchable table-sortable table-school-unit-addresses',
        'body': {
            'row_attrs': {
                'data-id':  {
                    'type': 'twig',
                    'path': 'id'
                },
            },
            'link': {
                'url': 'nav.admin_edit_school_unit_address',
                'params': {
                    'id': {
                        'type': 'twig',
                        'path': 'id'
                    }
                },
                'attrs': {
                    'data-reload': 'true',
                    'data-title': 'nav.admin_list_school_unit_addresses'|trans({}, 'nav'),
                    'data-toggle': 'modal'
                }
            },
            'cols': {
                'name': {
                    'type': 'twig',
                    'path': 'name'
                },
                'streetAddress': {
                    'type': 'twig',
                    'path': 'streetAddress',
                },
                'zipcode': {
                    'type': 'twig',
                    'path': 'zipcode',
                },
                'isActive text-center hidden-xs': {
                    'type': 'twig',
                    'path': 'isActive',
                    'conditions': {
                        '0': '<i class="fa fa-lg fa-toggle-off"></i>',
                        '1': '<i class="fa fa-lg text-success fa-toggle-on"></i>'
                    }
                }
            }
        },
        'head': {
            'sortable': {
                'orders': orders,
                'order': order,
                'sort': sort,
                'icons': {
                    'ASC': 'fa-chevron-up',
                    'DESC': 'fa-chevron-down'
                },
                'link': {
                    'url': 'nav.admin_list_school_unit_addresses'
                }
            },
            'cols': {
                'name': {
                    'label': 'field.name',
                    'sort': 'name'
                },
                'streetAddress': {
                    'label': 'field.address',
                    'sort': 'streetAddress'
                },
                'zipcode': {
                    'label': 'field.zipcode',
                    'sort': 'zipcode'
                },
                'isActive hidden-xs': {
                    'label': 'field.isActive',
                    'sort': 'isActive'
                }
            }
        }
    }) }}
{% endmacro %}
