{% set use_heading = false %}
{% set body_class = 'body-medium' %}
{% set extends = 'base.html.twig' %}
{% if modal is defined and modal == true %}
    {% set extends = 'modal.html.twig' %}
{% endif %}
{% extends (app.request.get('sort') is null and app.request.get('id') == 0) ? extends : 'sortable-table.html.twig' %}

{% set buttons = [{
    'modal': {
        'title': {
            'key': 'nav.admin_list_school_unit_names',
            'domain': 'nav'
        },
        'reload': true,
    },
    'title': {
        'key': 'action.create',
    },
    'class': 'hidden-sm hidden-md hidden-lg',
    'icon': 'plus',
    'href': path('nav.admin_edit_school_unit_name')
},{
    'separator': true
},{
    'helpmode': {
        'content': {
            'key': 'help.action.edit.school_unit_name',
            'domain': 'school'
        }
    },
    'modal': {
        'title': {
            'key': 'nav.admin_list_school_unit_names',
            'domain': 'nav'
        },
        'reload': true,
    },
    'title': {
        'key': 'action.edit'
    },
    'class': 'btn-open disabled',
    'icon': 'edit'
},{
    'helpmode': {
        'content': {
            'key': 'help.action.delete.school_unit_name',
            'domain': 'school'
        }
    },
    'modal': {
        'title': {
            'key': 'action.delete',
        },
        'reload': true,
        'type': 'confirm'
    },
    'title': {
        'key': 'action.delete'
    },
    'class': 'btn-delete disabled',
    'icon': 'trash-o'
},{
    'helpmode': {
        'content': {
            'key': 'help.action.toggle-active',
            'domain': 'school'
        }
    },
    'title': {
        'key': 'action.toggle_active',
    },
    'class': 'btn-toggle-active disabled',
    'icon': 'power-off',
    'target': '.table-school-unit-names'
},{
    'helpmode': {
        'content': {
            'key': 'help.action.unselect.school_unit_name',
            'domain': 'school'
        }
    },
    'title': {
        'key': 'action.unselect'
    },
    'class': 'btn-unselect disabled',
    'icon': 'times-circle-o'
}] %}

{% import 'admin/schools/units/names/table.html.twig' as table %}
{% import 'admin/schools/units/names/toolbar.html.twig' as toolBar %}
{% import 'toolbar/contextmenu.html.twig' as contextMenu %}

