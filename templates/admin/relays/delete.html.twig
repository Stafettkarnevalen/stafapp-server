{% set use_heading = false %}
{% set body_class = 'body-medium' %}
{% set extends = 'base.html.twig' %}
{% if modal is defined and modal == true %}
    {% set extends = 'confirm.html.twig' %}
{% endif %}
{% extends extends %}
{% if relay is defined %}
{% set name = relay.name %}
{% else %}
{% set name = rule.title %}
{% endif %}
{% block body %}
    <h1 class="text-center">{{ name }}</h1>
    <h2 class="text-center">{{ 'label.confirm_delete'|trans({}, 'relay') }}</h2>
    {{ form_start(form) }}
        <div class="form-nav form-nav-warning">
            <div class="btn-group btn-group-justified" role="group">
                {% if modal is defined and modal == true %}
                    <a class="btn btn-success" data-dismiss="modal" aria-label="Close"><i class="fa fa-chevron-left"></i> {% trans from 'relay' %}label.no{% endtrans %} <i class="fa fa-close"></i></a>
                {% else %}
                    <a class="btn btn-success" href="{{ path('nav.admin_users') }}"><i class="fa fa-chevron-left"></i> {% trans from 'relay' %}label.no{% endtrans %} <i class="fa fa-close"></i></a>
                {% endif %}
                <div class="btn-group" role="group">
                    {{ form_widget(form.yes) }}
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
