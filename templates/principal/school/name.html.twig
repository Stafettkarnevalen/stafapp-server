<div class="form bg-default container-fluid all-padding">
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">{% trans from 'principal' %}title.school_info{% endtrans %}</div>
                <div class="panel-body">
                    <dl class="dl dl-horizontal">
                        <dt></dt>
                        <dd><strong>{{ school.name }}</strong></dd>
                        <dt><i class="fa fa-map-marker"></i></dt>
                        <dd>
                            {{ school.name.streetAddress }}<br/>
                            {{ school.name.zipcode }}
                            {{ school.name. city }}<br/>
                            {{ school.name.country }}
                        </dd>
                        <dt><i class="fa fa-phone"></i></dt>
                        <dd>
                            {{ school.name.phone }}
                        </dd>
                        <dt><i class="fa fa-envelope"></i></dt>
                        <dd>{{ school.name.email }}</dd>
                    </dl>
                </div>
                <div class="panel-footer text-right">
                    <a href="{{ path('nav.principal_edit_school_name') }}" title="{% trans %}action.edit{% endtrans %}" data-title="{% trans %}action.edit{% endtrans %}" data-reload="true" data-toggle="modal" class="btn btn-default">{% trans from 'principal' %}action.edit{% endtrans %}</a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">{% trans from 'principal' %}title.school_data{% endtrans %}</div>
                <div class="panel-body">
                    <dl class="dl dl-horizontal">
                        <dt><i class="fa fa-hashtag"></i></dt>
                        <dd>{{ school.number }}</dd>
                        <dt><i class="fa fa-key"></i></dt>
                        <dd>{{ school.password }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
