{% set use_heading = false %}
{% set body_class = 'body-medium' %}
{% set extends = 'base.html.twig' %}
{% if modal is defined and modal == true %}
    {% set extends = 'modal.html.twig' %}
{% endif %}
{% extends extends %}
{% set no_toolbar = true %}
{% block body %}
    <div class="side-padding">
        <h1>{% trans from "principal" %}title.school_info{% endtrans %}</h1>
    </div>
    <div class="all-padding">
        <table class="stepper">
            <tbody>
            <tr>
                <td class="bg-primary"></td>
            </tr>
            </tbody>
        </table>
        <div class="form bg-default all-padding">
            {{ form_row(form.name) }}
            {{ form_row(form.abbreviation) }}
            {{ form_row(form.streetAddress) }}
            {{ form_row(form.zipcode) }}
            {{ form_row(form.city) }}
            {{ form_row(form.pobox) }}
            {{ form_row(form.country) }}
            <hr/>
            {{ form_row(form.email) }}
            {{ form_row(form.phone) }}
            <hr/>
        </div>
        {% if modal is not defined or modal == false %}
                <div class="form-nav">
                    <div class="btn-group btn-group-justified" role="group">
                        <a class="btn btn-default" href="{{ path('nav.principal_school') }}"><i class="fa fa-chevron-left"></i> {% trans %}action.cancel{% endtrans %} <i class="fa fa-undo"></i></a>
                        <div class="btn-group" role="group">
                            {{ form_widget(form.save) }}
                        </div>
                    </div>
                </div>
        {% endif %}
    </div>
{% endblock %}