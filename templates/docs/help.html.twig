{# app/Resources/views/security/login.html.twig #}
{% set use_heading = true %}
{% set body_class = 'body-medium' %}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="all-padding">
        <table class="stepper">
            <tbody>
            <tr>
                <td class="bg-primary"></td>
            </tr>
            </tbody>
        </table>
        <nav class="navbar navbar-default toolbar">
            <div class="container-fluid">
                <div class="navbar-header pull-right">
                    <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#help-navbar-collapse" aria-expanded="false">
                        {{ ('help.' ~ type|lower)|trans({}, "documentation") }} <i class="caret"></i>
                    </button>
                </div>
                <div class="collapse navbar-collapse pull-left col-sm-pull-6" id="help-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li{% if type == 'docs' %} class="active"{% endif %}><a href="{{ path('nav.docs') }}"><i class="fa fa-book"></i> &nbsp; {{ 'label.documentation'|trans({}, "documentation") }}</a></li>
                    </ul>
                </div>
                <div class="input-group col-xs-6 top-padding-sm pull-left">
                    <span class="input-group-addon">{% trans from "documentation" %}label.search{% endtrans %}</span>
                    <input id="search" class="input-sm form-control" type="text"/>
                    <a id="clear_search" class="disabled input-group-addon btn"><i class="fa fa-times-circle-o"></i></a>
                </div>
            </div>
        </nav>
        <script type="text/javascript">
